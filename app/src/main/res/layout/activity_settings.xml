<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.iotprojectfinal.Settings">

    <include layout="@layout/toolbar" />

    <EditText
        android:id="@+id/txtId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:layout_marginTop="84dp"
        android:width="500px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="2yxw00"
        app:layout_constraintStart_toEndOf="@+id/lblId"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/txtServerPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:width="500px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="1883"
        app:layout_constraintStart_toEndOf="@+id/lblServerPort"
        app:layout_constraintTop_toBottomOf="@+id/txtId" />

    <TextView
        android:id="@+id/lblToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Token:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblServerPort" />

    <EditText
        android:id="@+id/txtToken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:width="500px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="OY1K@7VKUH-3nTzp0Z"
        app:layout_constraintStart_toEndOf="@+id/lblToken"
        app:layout_constraintTop_toBottomOf="@+id/txtServerPort" />

    <EditText
        android:id="@+id/txtDeviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="10dp"
        android:width="500px"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="S9_Alhiet"
        app:layout_constraintStart_toEndOf="@+id/lblDeviceId"
        app:layout_constraintTop_toBottomOf="@+id/txtToken" />

    <TextView
        android:id="@+id/lblSamples"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Samples:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblDeviceId" />

    <TextView
        android:id="@+id/lblDeviceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Device ID:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblToken" />

    <EditText
        android:id="@+id/txtSamples"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="integer"
        android:text="10"
        app:layout_constraintStart_toEndOf="@+id/lblSamples"
        app:layout_constraintTop_toBottomOf="@+id/txtDeviceId" />

    <TextView
        android:id="@+id/lblServerPort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Server Port:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblId" />

    <TextView
        android:id="@+id/lblId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="96dp"
        android:text="IBM Cloud Id:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblPeriod"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="Sampling Time:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSamples" />

    <EditText
        android:id="@+id/txtPeriod"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="integer"
        android:text="25"
        app:layout_constraintStart_toEndOf="@+id/lblPeriod"
        app:layout_constraintTop_toBottomOf="@+id/txtSamples" />

    <TextView
        android:id="@+id/lblQos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:text="QOS:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPeriod" />

    <EditText
        android:id="@+id/txtQos"
        android:layout_width="70dp"
        android:layout_height="43dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="number"
        android:numeric="integer"
        android:text="0"
        app:layout_constraintStart_toEndOf="@+id/lblQos"
        app:layout_constraintTop_toBottomOf="@+id/txtPeriod" />

</androidx.constraintlayout.widget.ConstraintLayout>
